// vim:ft=jsonc

{
  "coc.preferences.autoTrigger": "always",
  "coc.preferences.noselect": false,
  /* "coc.preferences.triggerAfterInsertEnter": false, */
  "coc.preferences.timeout": 200,
  "coc.source.neosnippet.enable": false,
  "coc.source.emoji.filetypes": ["markdown", "gitcommit", "markdown.ghpull"],
  "coc.preferences.customSources": ["word","include"],
  /* "tslint.enable": false, */
  "tsserver.enable": false,
  "coc.preferences.diagnostic.errorSign": "×",
  "coc.preferences.diagnostic.warningSign": "●",
  "coc.preferences.diagnostic.infoSign": "!",
  "coc.preferences.diagnostic.hintSign": "!",
  "languageserver": {
    "flow": {
      "command": "flow-language-server",
      "args": ["--stdio"],
      "filetypes": ["javascript", "javascript.jsx"],
      "initializationOptions": {},
      "settings": {}
    },
    "reason": {
      "command": "ocaml-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["ocaml", "reason"],
      "initializationOptions": {},
      "settings": {}
    },
    "rust": {
      "command": "rustup",
      "args": ["run", "stable", "rls"],
      "filetypes": ["rust"],
      "initializationOptions": {},
      "settings": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "initializationOptions": {},
      "settings": {}
    },
    "docker": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"],
      "initializationOptions": {},
      "settings": {}
    },
    "clojure": {
      "command": "clojure-lsp",
      "args": [],
      "filetypes": ["clojure"],
      "initializationOptions": {},
      "settings": {}
    },
  }
}
