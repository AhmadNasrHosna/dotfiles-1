# vim:ft=config:

article-sort-order  desc
feed-sort-order date-desc
browser "open -g -a 'Google Chrome Canary' %u"
max-items 100
auto-reload no
reload-threads 3
reload-time 30
refresh-on-startup no
prepopulate-query-feeds yes
save-path ~/.newsbeuter/saved_articles
# show-read-articles no
show-read-feeds no
notify-always yes
notify-screen yes
always-display-description true
text-width 120

feedlist-format "%-4i %S %-65t %u %?d?- %-65d&? %> %T"
articlelist-format "%-4i %D %f %t"
feedlist-title-format "%N %V %> %u feeds with new articles"
articlelist-title-format "%T (%u unread, %t total) - %U"
notify-format  "%I %d %n %f new articles (%n unread articles, %f unread feeds)"
html-renderer "elinks -dump -force-html"

