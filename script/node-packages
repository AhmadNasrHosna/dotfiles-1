#!/bin/bash

NPM_PACKAGES=(
"jscpd"
"jsctags"
"jsinspect"
"flow-language-server"
"javascript-typescript-langserver"
"ocaml-language-server"
"netlify-cli"
"now"
"parker"
"prettier"
"serve"
"source-map-explorer"
"surge"
"svgo"
"tern"
"overtime-cli"
"rtm-cli"
"dependency-cruiser"
)

for package in "${NPM_PACKAGES[@]}"; do
  yarn global add "$package"
done


unset -v NPM_PACKAGES
