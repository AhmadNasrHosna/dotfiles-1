#!/bin/bash

NPM_PACKAGES=(
  "bash-language-server"
  "dockerfile-language-server-nodejs"
  "ocaml-language-server"
  "netlify-cli"
  "now"
  "parker"
  "prettier"
  "serve"
  "source-map-explorer"
  "svgo"
  "overtime-cli"
  "dependency-cruiser"
  "reason-cli@latest-macos"
  "neovim"
)

