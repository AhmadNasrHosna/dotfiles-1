#!/bin/bash

PACKAGES=(
"setuptools"
"pip"
"vim-vint"
"websocket-client"
"'python-language-server[all]'"
"pipenv"
)

FLAGS=''

for package in "${PACKAGES[@]}"; do
  [[ $package == "pip" ]] && FLAGS="--upgrade" || FLAGS="--user"

  pip2 install "$FLAGS" "$package" && pip3 install "$FLAGS" "$package"
done

unset -v PACKAGES FLAGS
