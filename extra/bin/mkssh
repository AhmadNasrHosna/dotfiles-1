#!/usr/bin/env sh
# Create and copy SSH key using Ed25519 to your clipboard
#   author: @ahmedelgabri
#   version: 2.0.0
# $1 = keyname
# $2 = Email ID used

ssh-keygen -o -a 100 -t ed25519 -f ~/.ssh/"${2:-id_rsa}" -C "$1"
pbcopy <"$HOME"/.ssh/"${2:-id_rsa}".pub
echo "------------------------------------------------------------\n"
echo "($1.pub) has been created & copied to your clipboard \n"
echo "------------------------------------------------------------\n"
