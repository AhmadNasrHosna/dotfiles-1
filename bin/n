#!/usr/bin/env sh
# helper for `node-build` so I don't have to type the location everytime

n() {
  if [ -n "$@" ]; then
    if command -v node-build >/dev/null; then
      node-build "$@" "$HOME/.node-versions/$1"
    else
      echo "node-build is not installed: 'brew install node-build'"
    fi
  else
    echo "You must pass a specific node version: x.x.x"
  fi
}

n "$@"


